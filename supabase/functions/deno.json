{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "importMap": "./import_map.json",
  "compilerOptions": {
    "types": ["jsr:@supabase/functions-js/edge-runtime"]
  },
  "lint": { "rules": { "tags": ["recommended"] } },
  "fmt": {
    "files": { "include": ["."], "exclude": ["node_modules", "dist"] },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}
