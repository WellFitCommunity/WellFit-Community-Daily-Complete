{
  "name": "dementia-care-monitor",
  "version": "2.0.0",
  "description": "Production-grade dementia patient safety and health monitoring companion app",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "generate-assets": "node scripts/generate-assets.js",
    "build:android:dev": "node scripts/build-and-deploy.js wellfit android development",
    "build:android:prod": "node scripts/build-and-deploy.js wellfit android production",
    "build:ios:dev": "node scripts/build-and-deploy.js wellfit ios development",
    "build:ios:prod": "node scripts/build-and-deploy.js wellfit ios production",
    "build:custom:android": "node scripts/build-and-deploy.js custom android production",
    "build:custom:ios": "node scripts/build-and-deploy.js custom ios production",
    "submit:android": "node scripts/build-and-deploy.js wellfit android production --submit",
    "submit:ios": "node scripts/build-and-deploy.js wellfit ios production --submit",
    "deploy:full": "npm run generate-assets && node scripts/build-and-deploy.js wellfit android production --submit && node scripts/build-and-deploy.js wellfit ios production --submit",
    "test": "jest",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "keywords": [
    "dementia",
    "care",
    "monitoring",
    "health",
    "geofencing",
    "elderly",
    "safety",
    "medical",
    "HIPAA"
  ],
  "author": "WellFit Community",
  "license": "Proprietary",
  "dependencies": {
    "react": "18.2.0",
    "react-native": "0.72.6",
    "expo": "~49.0.15",
    "expo-location": "~16.1.0",
    "expo-notifications": "~0.20.1",
    "expo-camera": "~13.4.4",
    "expo-task-manager": "~11.3.0",
    "expo-background-fetch": "~11.3.0",
    "expo-permissions": "~14.2.1",
    "expo-constants": "~14.4.2",
    "expo-device": "~5.4.0",
    "expo-app-loading": "~2.1.0",
    "expo-splash-screen": "~0.20.5",
    "expo-status-bar": "~1.6.0",
    "@react-native-async-storage/async-storage": "1.18.2",
    "@react-native-community/netinfo": "9.4.1",
    "react-native-maps": "1.7.1",
    "react-native-permissions": "^3.9.3",
    "crypto-js": "^4.1.1",
    "react-native-vector-icons": "^10.0.0",
    "react-native-reanimated": "~3.3.0",
    "react-native-gesture-handler": "~2.12.0",
    "react-native-safe-area-context": "4.6.3",
    "react-native-screens": "~3.22.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@expo/webpack-config": "^19.0.0",
    "@types/react": "~18.2.14",
    "@types/react-native": "~0.72.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "eslint-config-expo": "^7.0.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.2.1",
    "prettier": "^3.0.0",
    "typescript": "^5.1.3"
  },
  "private": true,
  "expo": {
    "install": {
      "exclude": ["react-native-safe-area-context"]
    }
  }
}