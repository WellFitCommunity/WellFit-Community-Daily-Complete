# =============================================================================
# WELLFIT COMMUNITY - EXAMPLE ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.local and fill in your actual values
#
# VITE_ prefix = loaded by browser (client-side)
# No prefix = server-side only (edge functions, scripts)
# =============================================================================

# -----------------------------------------------------------------------------
# SUPABASE (Client-side) - REQUIRED
# -----------------------------------------------------------------------------
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SB_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
VITE_SB_ANON_KEY=your-anon-key
VITE_SB_PUBLISHABLE_API_KEY=your-publishable-key
VITE_SUPABASE_PUBLISHABLE_KEY=your-publishable-key

# Supabase Edge Function URLs
VITE_SUPABASE_REGISTER_URL=https://your-project.functions.supabase.co/functions/v1/register
VITE_SUPABASE_FUNCTIONS_URL=https://your-project.functions.supabase.co/functions/v1
VITE_SUPABASE_EMAIL_ENDPOINT=https://your-project.functions.supabase.co/mailersend-email
VITE_SUPABASE_PASSWORD_RESET_URL=https://your-project.functions.supabase.co/functions/v1/password-reset
VITE_SUPABASE_EMAIL_VERIFICATION_URL=https://your-project.functions.supabase.co/functions/v1/email-verification

# -----------------------------------------------------------------------------
# SUPABASE (Server-side only)
# -----------------------------------------------------------------------------
SB_SECRET_KEY=your-secret-key
SB_URL=https://your-project.supabase.co
SB_ANON_KEY=your-anon-key
SB_PUBLISHABLE_API_KEY=your-publishable-key
SUPABASE_DB_URL="postgresql://postgres:password@db.your-project.supabase.co:5432/postgres"
JWKS_URL=https://db.your-project.supabase.co/auth/v1/jwks

# -----------------------------------------------------------------------------
# HCAPTCHA - REQUIRED for registration/login
# Get from: https://dashboard.hcaptcha.com/
# -----------------------------------------------------------------------------
VITE_HCAPTCHA_SITE_KEY=your-hcaptcha-site-key
VITE_REQUIRE_HCAPTCHA_LOGIN=true
HCAPTCHA_SECRET_KEY=your-hcaptcha-secret
HCAPTCHA_SECRET=your-hcaptcha-secret
HCAPTCHA_SITE_KEY=your-hcaptcha-site-key

# -----------------------------------------------------------------------------
# FIREBASE (Push Notifications) - Optional
# Get from: https://console.firebase.google.com/
# -----------------------------------------------------------------------------
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_VAPID_KEY=your-vapid-key
VITE_FIREBASE_AUTH_DOMAIN=your-app.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-app.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id

# -----------------------------------------------------------------------------
# CLAUDE AI - Optional (for AI features)
# Get from: https://console.anthropic.com/
# -----------------------------------------------------------------------------
VITE_ANTHROPIC_API_KEY=sk-ant-your-api-key
VITE_CLAUDE_DEFAULT_MODEL=claude-3-5-sonnet-20241022
VITE_CLAUDE_ADMIN_MODEL=claude-3-5-sonnet-20241022
VITE_CLAUDE_MAX_TOKENS=4000
VITE_CLAUDE_TIMEOUT=30000
ANTHROPIC_API_KEY=sk-ant-your-api-key

# -----------------------------------------------------------------------------
# APP CONFIGURATION (Client-side)
# -----------------------------------------------------------------------------
VITE_APP_NAME=WellFit Community
VITE_DEMO_ENABLED=false
VITE_COMPASS_DEMO=false
VITE_ENABLE_SW=false
VITE_HIPAA_LOGGING_ENABLED=true
VITE_WEATHER_API_KEY=your-weather-api-key

# -----------------------------------------------------------------------------
# TWILIO (Server-side) - Optional (for SMS)
# Get from: https://console.twilio.com/
# -----------------------------------------------------------------------------
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_VERIFY_SERVICE_SID=your-verify-sid
TWILIO_MESSAGING_SERVICE_SID=your-messaging-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_ACCOUNT_SID=your-account-sid

# -----------------------------------------------------------------------------
# MAILERSEND (Server-side) - Optional (for email)
# Get from: https://app.mailersend.com/
# -----------------------------------------------------------------------------
MAILERSEND_SMTP_PORT=587
MAILERSEND_SMTP_HOST=smtp.mailersend.net
MAILERSEND_DOMAIN=yourdomain.org
MAILERSEND_SMTP_PASSWORD=your-smtp-password
MAILERSEND_SMTP_USERNAME=your-smtp-username
MAILERSEND_API_KEY=your-mailersend-api-key
MAILERSEND_FROM_EMAIL=noreply@yourdomain.org
MS_TOKEN=your-mailersend-api-key
SEND_WELCOME_EMAIL_FUNCTION_NAME=send_welcome_email
SEND_EMAIL_FUNCTION_NAME=send_email
ADMIN_EMAIL=admin@yourdomain.org
MAX_EMAIL_RETRIES=3
RETRY_DELAY=2000

# -----------------------------------------------------------------------------
# DEEPGRAM (Voice) - Optional
# Get from: https://console.deepgram.com/
# -----------------------------------------------------------------------------
DEEPGRAM_API_KEY=your-deepgram-api-key
DEEPGRAM_PROJECT_NAME=YourProject
DEEPGRAM_PROJECT_ID=your-project-id

# -----------------------------------------------------------------------------
# DAILY.CO (Video) - Optional
# Get from: https://dashboard.daily.co/
# -----------------------------------------------------------------------------
DAILY_VIDEO_API_KEY=your-daily-api-key

# -----------------------------------------------------------------------------
# GITHUB - Optional (for CI/CD)
# -----------------------------------------------------------------------------
GITHUB_TOKEN=your-github-token
GITHUB_OWNER=YourOrg
GITHUB_REPO=your-repo

# -----------------------------------------------------------------------------
# EPIC INTEGRATION - Optional (for EHR integration)
# -----------------------------------------------------------------------------
EPIC_SANDBOX_CLIENT_SECRET=your-epic-client-secret

# -----------------------------------------------------------------------------
# SECURITY & CORS (Server-side)
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
INTERNAL_SECRET=your-internal-secret
INTERNAL_API_KEY=your-internal-api-key
PHI_ENCRYPTION_KEY=your-phi-encryption-key

# -----------------------------------------------------------------------------
# SESSION & RATE LIMITING (Server-side)
# -----------------------------------------------------------------------------
ADMIN_SESSION_TTL_MIN=120
REQUEST_TIMEOUT_MS=45000
ALERT_RATE_LIMIT_MINUTES=10
API_RATE_LIMIT_REQUESTS=60
API_RATE_LIMIT_WINDOW=60000

# -----------------------------------------------------------------------------
# COMPLIANCE
# -----------------------------------------------------------------------------
HIPAA_LOGGING_ENABLED=true
PHI_ENCRYPTION_ENABLED=true
AUDIT_RETENTION_DAYS=2555

# -----------------------------------------------------------------------------
# BUDGET
# -----------------------------------------------------------------------------
CLAUDE_DAILY_BUDGET=50
CLAUDE_MONTHLY_BUDGET=500
ENABLE_COST_ALERTS=true

# -----------------------------------------------------------------------------
# MISC
# -----------------------------------------------------------------------------
NODE_ENV=development
LOG_LEVEL=info
