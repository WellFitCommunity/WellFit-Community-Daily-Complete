# Claude AI Configuration - WellFit Community Health Platform
# Copy this file to .env.local and fill in your actual values

# Required: Anthropic API Key
# Get this from: https://console.anthropic.com/
# Format: Must start with 'sk-ant-'
REACT_APP_ANTHROPIC_API_KEY=sk-ant-your_api_key_here

# Claude Model Configuration
# Default model for senior patients (fast, cost-effective)
REACT_APP_CLAUDE_DEFAULT_MODEL=claude-3-5-sonnet-20241022

# Admin model for advanced analytics (same as default for now)
REACT_APP_CLAUDE_ADMIN_MODEL=claude-3-5-sonnet-20241022

# Claude API Settings
REACT_APP_CLAUDE_MAX_TOKENS=4000
REACT_APP_CLAUDE_TIMEOUT=30000

# App Configuration
REACT_APP_APP_NAME=WellFit Community
REACT_APP_DEMO_ENABLED=false

# Environment
NODE_ENV=development

# Security and Rate Limiting
API_RATE_LIMIT_REQUESTS=60
API_RATE_LIMIT_WINDOW=60000

# Budget Management
CLAUDE_DAILY_BUDGET=50
CLAUDE_MONTHLY_BUDGET=500
ENABLE_COST_ALERTS=true

# Healthcare Compliance
HIPAA_LOGGING_ENABLED=true
PHI_ENCRYPTION_ENABLED=true
AUDIT_RETENTION_DAYS=2555

# FHIR Interoperability Configuration
# Enable FHIR integrations
REACT_APP_FHIR_ENABLED=true

# Default FHIR server settings (optional - can be configured per connection)
REACT_APP_FHIR_DEFAULT_SERVER=https://fhir.example.com/R4
REACT_APP_FHIR_CLIENT_ID=wellfit-community-app

# FHIR Sync Settings
REACT_APP_FHIR_AUTO_SYNC_ENABLED=false
REACT_APP_FHIR_SYNC_BATCH_SIZE=50
REACT_APP_FHIR_SYNC_RETRY_ATTEMPTS=3

# Epic EHR Configuration (if using Epic)
REACT_APP_EPIC_FHIR_URL=https://fhir.epic.com/interconnect-fhir-oauth/api/FHIR/R4
REACT_APP_EPIC_CLIENT_ID=your_epic_client_id

# Cerner EHR Configuration (if using Cerner)
REACT_APP_CERNER_FHIR_URL=https://fhir-ehr-code.cerner.com/r4/ec2458f2-1e24-41c8-b71b-0e701af7583d
REACT_APP_CERNER_CLIENT_ID=your_cerner_client_id

# Instructions for Setup:
# 1. Copy this file to .env.local
# 2. Replace 'your_api_key_here' with your actual Anthropic API key
# 3. Configure FHIR server URLs and client IDs for your EHR systems
# 4. Register your application with Epic/Cerner/other EHRs to obtain client IDs
# 5. Adjust budget limits as needed for your organization
# 6. Keep all other settings as default unless specific customization is needed