# Claude AI Configuration - WellFit Community Health Platform
# Copy this file to .env.local and fill in your actual values

# CRITICAL SECURITY: Anthropic API Key (Backend Only - NO REACT_APP_ prefix)
# Get this from: https://console.anthropic.com/
# Format: Must start with 'sk-ant-'
# WARNING: Never use REACT_APP_ prefix - that exposes the key in frontend bundle
ANTHROPIC_API_KEY=sk-ant-your_api_key_here

# Claude Model Configuration
# Default model for senior patients (fast, cost-effective)
REACT_APP_CLAUDE_DEFAULT_MODEL=claude-3-5-sonnet-20241022

# Admin model for advanced analytics (same as default for now)
REACT_APP_CLAUDE_ADMIN_MODEL=claude-3-5-sonnet-20241022

# Claude API Settings
REACT_APP_CLAUDE_MAX_TOKENS=4000
REACT_APP_CLAUDE_TIMEOUT=30000

# App Configuration
REACT_APP_APP_NAME=WellFit Community
REACT_APP_DEMO_ENABLED=false

# Environment
NODE_ENV=development

# Security and Rate Limiting
API_RATE_LIMIT_REQUESTS=60
API_RATE_LIMIT_WINDOW=60000

# Budget Management
CLAUDE_DAILY_BUDGET=50
CLAUDE_MONTHLY_BUDGET=500
ENABLE_COST_ALERTS=true

# Healthcare Compliance
HIPAA_LOGGING_ENABLED=true
PHI_ENCRYPTION_ENABLED=true
AUDIT_RETENTION_DAYS=2555

# Feature Flags - Enable/Disable Advanced Features
# Clinical Features
REACT_APP_FEATURE_MEMORY_CLINIC=false
REACT_APP_FEATURE_MENTAL_HEALTH=false
REACT_APP_FEATURE_DENTAL_HEALTH=true
REACT_APP_FEATURE_STROKE_ASSESSMENT=false
REACT_APP_FEATURE_NEURO_SUITE=false
REACT_APP_FEATURE_WEARABLES=false

# Population Health Management
REACT_APP_FEATURE_FREQUENT_FLYERS=false
REACT_APP_FEATURE_DISCHARGE_TRACKING=false

# Financial/Billing
REACT_APP_FEATURE_REVENUE_DASHBOARD=false
REACT_APP_FEATURE_BILLING_REVIEW=false

# Workflow Features
REACT_APP_FEATURE_SHIFT_HANDOFF=false
REACT_APP_FEATURE_FIELD_VISITS=false
REACT_APP_FEATURE_CAREGIVER_PORTAL=false

# Emergency Response
REACT_APP_FEATURE_EMS_METRICS=false
REACT_APP_FEATURE_COORDINATED_RESPONSE=false
REACT_APP_FEATURE_LAW_ENFORCEMENT=true

# Admin Features
REACT_APP_FEATURE_ADMIN_REPORTS=true
REACT_APP_FEATURE_ENHANCED_QUESTIONS=false

# Internal Monitoring (Super Admin Only)
REACT_APP_FEATURE_SOC2_DASHBOARDS=false
REACT_APP_FEATURE_PERFORMANCE_MONITORING=false
REACT_APP_FEATURE_AI_COST_TRACKING=false

# FHIR Interoperability Configuration
# Enable FHIR integrations
REACT_APP_FHIR_ENABLED=true

# Default FHIR server settings (optional - can be configured per connection)
REACT_APP_FHIR_DEFAULT_SERVER=https://fhir.example.com/R4
REACT_APP_FHIR_CLIENT_ID=wellfit-community-app

# FHIR Sync Settings
REACT_APP_FHIR_AUTO_SYNC_ENABLED=false
REACT_APP_FHIR_SYNC_BATCH_SIZE=50
REACT_APP_FHIR_SYNC_RETRY_ATTEMPTS=3

# Epic EHR Configuration (if using Epic)
REACT_APP_EPIC_FHIR_URL=https://fhir.epic.com/interconnect-fhir-oauth/api/FHIR/R4
REACT_APP_EPIC_CLIENT_ID=your_epic_client_id

# Cerner EHR Configuration (if using Cerner)
REACT_APP_CERNER_FHIR_URL=https://fhir-ehr-code.cerner.com/r4/ec2458f2-1e24-41c8-b71b-0e701af7583d
REACT_APP_CERNER_CLIENT_ID=your_cerner_client_id

# hCaptcha Configuration (Required for Registration/Login)
# Get these from: https://dashboard.hcaptcha.com/
# Frontend site key (public)
REACT_APP_HCAPTCHA_SITE_KEY=your_hcaptcha_site_key_here
# Backend secret key (keep this secret - set in Supabase Edge Function secrets)
# HCAPTCHA_SECRET=your_hcaptcha_secret_key_here

# Instructions for Setup:
# 1. Copy this file to .env.local
# 2. Replace 'your_api_key_here' with your actual Anthropic API key (use ANTHROPIC_API_KEY, not REACT_APP_)
# 3. Set up hCaptcha:
#    a. Sign up at https://dashboard.hcaptcha.com/
#    b. Create a new site and get your Site Key and Secret Key
#    c. Add REACT_APP_HCAPTCHA_SITE_KEY to .env.local
#    d. Add HCAPTCHA_SECRET to Supabase Edge Function secrets via:
#       supabase secrets set HCAPTCHA_SECRET=your_secret_key
# 4. Configure FHIR server URLs and client IDs for your EHR systems
# 5. Register your application with Epic/Cerner/other EHRs to obtain client IDs
# 6. Adjust budget limits as needed for your organization
# 7. Keep all other settings as default unless specific customization is needed